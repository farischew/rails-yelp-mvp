<div class="container">
  <div class="card">
    <h2><%= @restaurant.name %></h2>
  </div>

  <div class="card">
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.category.capitalize %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>

  <div class="card">
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <%= review.rating %>
      </li>
    <% end %>
    </ul>

    <%# <%= link_to "Create a new review", new_restaurant_review_path %> %>
  </div>

  <div>
    <p><%= link_to 'Go back to all restaurants', restaurants_path %></p>
  </div>
</div>
